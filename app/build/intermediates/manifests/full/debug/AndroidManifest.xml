<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mantambakberas.iamantaras"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="24" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.mantambakberas.iamantaras.config.AppController"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.mantambakberas.iamantaras.activity.SplashActivity"
            android:theme="@style/FullTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.mantambakberas.iamantaras.activity.LoginActivity"
            android:theme="@style/ThemeSplash" />
        <activity
            android:name="com.mantambakberas.iamantaras.activity.RegisterActivity"
            android:parentActivityName="com.mantambakberas.iamantaras.activity.LoginActivity"
            android:theme="@style/ThemeSplash" />
        <activity
            android:name="com.mantambakberas.iamantaras.activity.MainActivity"
            android:launchMode="singleTask"
            android:theme="@style/ThemeSplash" />
        <activity
            android:name="com.mantambakberas.iamantaras.activity.ProfileActivity"
            android:theme="@style/ThemeSplash" />
        <activity android:name="com.mantambakberas.iamantaras.activity.ListFriendActivity" />
        <activity android:name="com.mantambakberas.iamantaras.activity.SetelanActivity" />
    </application>

</manifest>